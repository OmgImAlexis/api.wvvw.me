{
  "name": "liftoff",
  "version": "0.0.1",
  "description": "API for Lift Off blogging platform.",
  "private": true,
  "scripts": {
    "clean-dist": "rm -rf dist && mkdir -p dist/server dist/client",
    "build": "npm run clean-dist && npm run build-client && npm run build-server",
    "build-client": "exit 0",
    "build-server": "babel ./src/server -d ./dist/server -s",
    "lint": "xo",
    "test": "nyc ava test/**/*.spec.js",
    "start": "node ./dist/server/index.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OmgImAlexis/liftoff"
  },
  "author": "OmgImAlexis",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/OmgImAlexis/wvvw.me/issues"
  },
  "homepage": "https://github.com/OmgImAlexis/wvvw.me",
  "main": "main.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "async": "^2.1.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.10",
    "configstore": "^3.1.0",
    "express": "^4.13.3",
    "express-api-error-handler": "^1.1.0",
    "express-jwt": "^5.1.0",
    "http-errors": "^1.6.1",
    "jsonwebtoken": "^7.3.0",
    "loud-rejection": "^1.6.0",
    "mongoose": "^4.9.2",
    "snyk": "^1.41.1"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "babel-watch": "^2.0.6",
    "coveralls": "^2.13.0",
    "mongomem": "^0.1.9",
    "nyc": "^10.2.0",
    "supertest": "^3.0.0",
    "tcp-port-used": "^0.1.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "space": 4,
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "no-console": "error",
      "unicorn/no-new-buffer": "off",
      "unicorn/filename-case": "off",
      "unicorn/custom-error-definition": "off",
      "unicorn/no-array-instanceof": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/throw-new-error": "off",
      "unicorn/number-literal-case": "off",
      "unicorn/prefer-starts-ends-with": "off",
      "unicorn/prefer-type-error": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-abusive-eslint-disable": "off"
    },
    "envs": [
      "node",
      "es6"
    ]
  },
  "ava": {
    "babel": "inherit",
    "ignore": [
      "test/server/index.js",
      "test/server/token.spec.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "snyk": true
}
