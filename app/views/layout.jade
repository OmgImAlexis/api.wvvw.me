doctype html
html
    head
        title wvvw.me
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.2/css/bootstrap.min.css", rel="stylesheet", type="text/css")
        link(href="/css/core.css", rel="stylesheet", type="text/css")
    body
        nav.navbar.navbar-default.navbar-static-top
            .container
                .navbar-header
                    button.navbar-toggle(data-toggle="collapse", data-target="#bs-example-navbar-collapse-8")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/")
                        strong WVVW.ME
                .collapse.navbar-collapse.navbar-ex1-collapse
                    ul.nav.navbar-nav
                        each menu in layout.menus
                            if (menu.type == 'main')
                                li(class=(menu.hasActive ? (layout.currentPage == menu.relativeUrl ? "active" : "") : ""))
                                    a(href=menu.relativeUrl) #{menu.title}
                            else
                                li.dropdown
                                    a.dropdown-toggle(href="#", data-toggle="dropdown")
                                        | #{menu.title}
                                        b.caret
                                    ul.dropdown-menu
                                        each item in menu.dropdowns
                                            li
                                                a(href=item.relativeUrl) #{item.title}
                    ul.nav.navbar-nav.navbar-right
                        if (user)
                            li.dropdown
                                a.dropdown-toggle(href="#", data-toggle="dropdown")
                                    | ADMIN
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/admin")
                                            | Admin Panel
                                    li.divider
                                    li
                                        a(href="/signout")
                                            | Signout
                        else
                            li
                                a(href="/signin") SIGNIN
                            li
                                | 
                            li
                                a(href="/signup") SIGNUP
                    form.navbar-form.navbar-right(action="/search", method="get")
                        .input-group
                            input.form-control(type="text", placeholder="Search", name="searchTerms")
                            span.input-group-btn
                                button.btn.btn-default(type="button") Go!
        #content
            .container
                .row
                    if(!layout.fullWidth)
                        .col-lg-8.col-md-8
                            block content
                        .col-lg-4.col-md-4
                            #sidebars
                                .sidebar
                                    h3.title RECENT POSTS
                                    .content
                                        ul
                                            for post in layout.sidebarPosts
                                                li.recent-post
                                                    .thumbnail
                                                        img.img-responsive(src="https://placehold.it/200x250")
                                                    a(href='/post/' + post.slug)
                                                        h5 #{post.title}
                                                        p
                                                            small
                                                                i.fa.fa-calendar
                                                                | 30 June 2015
                    else
                        block content
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.2/js/bootstrap.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.min.js")
        script(src="http://localhost:3000/js/moment-timezone-with-data.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jstimezonedetect/1.0.4/jstz.min.js")
        block scripts
