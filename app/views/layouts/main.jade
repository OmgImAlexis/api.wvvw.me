doctype html
html
    head
        title= title ? title : '\u180E'
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href="https://cdn.wvvw.me/css/core.min.css", rel="stylesheet", type="text/css")
        block styles
    body
        #header
            form(action="/search", method="post", autocomplete="off")
                input(type="text", placeholder="Search...", name="searchTerm")#globalSearch
            nav.nav
                ul
                    li
                        a(href="https://api.wvvw.me/") API (Alpha)
                    li
                        a(href="/") Blog
                    li
                        a(href="/about") About
                    li
                        a(href="/contact") Contact
                    li
                        a(href="https://github.com/omgimalexis") Github
        block beforeContent
        #main
            block content
        script(src="https://cdn.wvvw.me/js/_bower.min.js")
        script.
            $(document).ready(function() {
                $("[datetime]").timeago();
            });
        block scripts
