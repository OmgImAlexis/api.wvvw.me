doctype html
html
    head
        title= title ? title : 'wvvw.me'
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href="/css/core.css", rel="stylesheet", type="text/css")
        block styles
    body
        #header
            form(action="/search", method="post")
                input(type="text", placeholder="Search...", name="searchTerm")#globalSearch
            nav.nav
                ul
                    li
                        a(href="https://api.wvvw.me/") API (Alpha)
                    li
                        a(href="/") Blog
                    li
                        a(href="/about") About
                    li
                        a(href="/contact") Contact
                    li
                        a(href="https://github.com/omgimalexis") Github
        block beforeContent
        #main
            block content
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(src="/js/jquery.timeago.js")
        script(src="/js/epiceditor.min.js")
        script.
            $(document).ready(function() {
                $("[datetime]").timeago();
            });
        block scripts
